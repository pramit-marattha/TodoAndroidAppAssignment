<?xml version="1.0" encoding="utf-8"?>
   <!-- This vertical linear layout contains all the views in the AddTaskActivity code.
    This includes an EditText to adtaskEntrytask description, and buttons to select a priority
    -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:background="@drawable/backdesign"
    android:paddingTop="@dimen/activity_vertical_margin">


    <!-- EditText for getttaskEntrytask description input -->
    <EditText
        android:id="@+id/editTextTaskDescription"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:gravity="start"
        android:hint="@string/edit_task_description"
        android:paddingBottom="@dimen/activity_horizontal_margin" />

    <!-- TextView and FrameLayout (which contains buttons) for Priority Selection -->

    <!-- RadioGroup for visible selection of a priority -->


    <TextView
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="377dp"
        android:layout_height="30dp"
        android:layout_gravity="start"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:text="@string/priority_string"
        android:textColor="@android:color/primary_text_light" />



    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:weightSum="3">

        <RadioButton
            android:id="@+id/radButton1"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonhigh"
            android:checked="true"
            android:text="@string/high_priority"
            android:theme="@style/WhiteRadioButton" />

        <RadioButton
            android:id="@+id/radButton2"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:background="@drawable/buttonmid"
            android:text="@string/med_priority"
            android:theme="@style/WhiteRadioButton" />



        <RadioButton
            android:id="@+id/radButton3"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:background="@drawable/buttonlow"
            android:text="@string/low_priority"
            android:theme="@style/WhiteRadioButton" />

    </RadioGroup>

    <TextView
        android:id="@+id/selectDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        android:text="Please set the Date"
        />

    <EditText
        android:id="@+id/CustomDateSet"
        android:layout_width="135dp"
        android:layout_height="117dp"
        android:layout_marginLeft="125dp"
        android:layout_marginBottom="-125dp"
        android:background="@drawable/cal"
        android:ems="10"
        android:focusable="false"
        android:inputType="date"
        android:textSize="25dp"
        android:textColor="#B85130"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="93dp"
        android:layout_height="105dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/mic"
        android:onClick="getSpeechInput" />

    <!-- Add button -->

    <Button
        android:id="@+id/saveButton"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="298dp"
        android:layout_height="76dp"
        android:layout_gravity="center"
        android:background="@drawable/roundbutton"
        android:text="@string/add_button"
        android:textColor="@android:color/primary_text_dark" />

</LinearLayout>